{% extends 'base.html.twig' %}

{% block title %}Gestion du compte{% endblock %}

{% block body %}


<div class="card margin-tb">
    <div class="margin-t-g d-flex justify-content-center">
        <div class="align-self-center">
            <p>Je n'ai pas de compte</p>
        </div>
        <a href={{ path("app_register") }} id="lien-signin" class="margin-left">
            <button class="btn btn-success">je veux en créer un !</button>
        </a>
    </div>     
    <h1 class="mb-3 font-weight-normal text-center margin-t-g">Connectez-vous</h1>
    <div class="card-body width-sm centrage">
        
        <form action="" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
            
            <div class="fluid-container margin-b-g"> 
                <label  class="col-form-label" for="inputUsername">Adresse email : </label>
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
                <label class="col-form-label" for="inputPassword">Mot de passe : </label>
                <div class="col-8">
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                </div>
            </div>
            <input type="hidden" name="_csrf_token"value="{{ csrf_token('authenticate') }}">              
            <input class="btn btn-primary marginEvo" type="submit" value="Se connecter">
            
        </form>

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <div class="margin-t-g">
            <a href="{{ path("resetpasswordapp_forgot_password_request") }}">
                <button class="btn btn-warning">Mot de passe oublié</button>
            </a>
        </div>
       
        
    </div>
</div>
{% endblock %}
