{% extends 'base.html.twig' %}

{% block title %}Gestion du compte{% endblock %}

{% block body %}
    <div class="card margin-tb">
        
        <div class="card-body width-sm centrage">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal text-center">Connectez-vous</h1>
                <label  class="col-form-label" for="inputUsername">Adresse email : </label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
                <label class="col-form-label" for="inputPassword">Mot de passe : </label>
                <div class="col-8">
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                </div>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <input class="btn btn-lg btn-primary margin-t-g" type="submit" value="Se connecter">
                    
               
            </form>
            <div class="margin-t-g">
                <a href="{{ path("resetpasswordapp_forgot_password_request") }}">
                    <button class="btn btn-warning">Mot de passe oublié</button>
                </a>
            </div>
            <div class="margin-tb">
                <a href={{ path("new_account") }} id="lien-signin">
                    <button class="btn btn-success">Je n'ai pas de compte, je veux en créer un !</button>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
