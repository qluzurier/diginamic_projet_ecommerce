{% extends 'base.html.twig' %}

{% block title %}Gestion du compte{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-header">
            <h1 class="card-title font-weight-bold text-primary">Mon compte utilisateur</h1>
        </div>
        <div class="card-body">
            <form method="POST">
                {{ form_row(form_user.email) }}
                {{ form_row(form_user.password) }}
                {{ form_row(form_user.nom) }}
                {{ form_row(form_user.prenom) }}
                {{ form_row(form_user.adresse) }}
                {{ form_row(form_user.code_postal) }}
                {{ form_row(form_user.ville) }}
                {{ form_row(form_user.tel) }}
                {{ form_row(form_user.submit) }}
                {# <a href="{{ path("password") }}">
                    <button class="btn btn-warning">Modifier mon mot de passe</button>
                </a> #}
            </form>
        </div>
    </div>

{% endblock %}
