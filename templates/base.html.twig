<!DOCTYPE html>
<html lang="fr">

    <head>
        <meta charset="UTF-8">
        <link rel="icon" type="image/x-icon" href="{{ asset('/images/new.favicon.ico') }}" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="/css/style.css">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" >
        {% endblock %}

    </head>

    <body>
        {% block header %}
        
                <header>
                    <img class="logo" src="/images/commerce.logo.png" alt="" title="Accueil" />
                </header>
           
        <div><hr class="separation"/></div> 
        <nav class="navbar navbar-expand-lg navbar-light bg-light margin">
            <div class="container-fluid">
               
                <div class="width" id="navbarNav">
                    <ul class="nav justify-content-center">
                        <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Catalogue</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link" href="/mon_compte">Mon Compte</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link" href="/panier">Panier</a>
                        </li>
                    </ul>
                </div>
            </div>
            <ul class="nav justify-content-end">
                <li class="nav-item">
                    <a class="nav-link active" href="#">Deconnexion</a>
                </li>
            </ul>
  
        </nav>
        
        {% endblock %}
          
        {% block body %}
     
        {% endblock %}
        {% block footer %}
          
            <ul class="nav justify-content-center bg-light footer">
                <li class="nav-item">
                    <a class="nav-link active" href="#">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">contact</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Aide</a>
                </li>
            </ul>
       
        {% endblock %}
    </body>
     {% block javascripts %}
