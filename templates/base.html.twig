<!DOCTYPE html>
<html lang="fr">

	<head>
		<meta charset="UTF-8">
		<meta name="robots" content="noindex, nofollow">
		<link rel="icon" type="image/x-icon" href="{{ asset('/images/new.favicon.ico') }}"/>
		<title>
			{% block title %}Welcome!{% endblock %}
		</title>
		{% block stylesheets %}
			<link rel="stylesheet" href="/css/style.css">
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">
		{% endblock %}

	</head>

	<body style="padding: 5rem 0rem 0rem 0rem !important;">
		{% block header %}

			<nav class="navbar navbar-expand-lg navbar-light bg-light border">
				<div class="container-fluid justify-content-space-between">
					<header class="header-size">
						<a href="{{ path("homepage") }}">
							<img class="logo" src="/images/commerce.logo.png" alt="" title="Accueil"/>
						</a>
					</header>
					<div id="navbarNav">
						<ul class="nav">
							<li class="nav-item">
								<a class="nav-link active" aria-current="page" href="{{ path("homepage") }}">Le catalogue</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path("panier_show") }}">Mon panier</a>
							</li>
							{% if app.user.username is defined %}
								<li class="nav-item">
									<a class="nav-link" href="{{ path("account") }}">Mon Compte</a>
								</li>
								{% if is_granted('ROLE_ADMIN') %}
									<li class="nav-item">
										<a class="nav-link" href="{{ path("easyadmin") }}">Administration du site</a>
									</li>
								{% endif %}
							{% else %}
								<li class="nav-item">
									<a class="nav-link" href="{{ path("app_register") }}">Je crée mon compte</a>
								</li>
							{% endif %}

						</ul>
					</div>
					<div>
						<ul class="liste" id="margin-bottom">
							<li class="nav-item liste">
								{% if app.user.username is defined %}
									Utilisateur :
									{{ app.user.username }}
									<a class="nav-link active" href="{{ path("app_logout") }}">Déconnexion</a>
								{% else %}
									<a class="nav-link active" href="{{ path("app_login") }}">Connexion</a>
								{% endif %}
							</li>
						</ul>
					</div>
				</div>
			</nav>

		{% endblock %}

		{% for message in app.flashes('success') %}
			<div class="alert alert-success" role="alert">
				{{ message }}
			</div>
		{% endfor %}

		{% block body %}{% endblock %}

		{% block footer %}

				<ul class="nav justify-content-center bg-light margin-t-g">
					<li class="nav-item">
						<a class="nav-link active" href="{{ path("homepage") }}">Accueil</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="mailto:diginamic@diginamic.fr">Contact</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="http://monecole.fr/monB2i/">Aide</a>
					</li>
				</ul>

			<footer class="bg-light text-center text-lg-start">
				<div class="text-center p-3"> @ 2021 Copyright:
						<a class="text-dark" href="https://www.diginamic.fr/">Diginamic Montpellier</a>
				</div>
			</footer>
		{% endblock %}
	</body>

	{% block javascripts %}
		<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>
	{% endblock %}
	
</html>
