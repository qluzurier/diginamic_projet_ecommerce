{% extends 'base.html.twig' %}

{% block title %}Le catalogue
{% endblock %}

{% block body %}
	<h1 class="text-center margin">Boutique</h1>
	<div class="container margin-tb">
		<div class="row">

			{# Formulaires de recherche #}
			<div class="liste col-3">
				<form class="d-flex">
					<input class="form-control me-2" type="search" placeholder="rechercher" aria-label="Search">
					<button class="btn btn-outline-success" type="submit">ok</button>
				</form>
				<h3 class="margin">Catégories</h3>
				<form>
					<select name="genre_search">
						{% for genre in genres %}
							<option>
								{{genre}}
							</option>
						{% endfor %}
					</select>
				</form>
			</div>

			{# Génération dynamique des articles #}
			{% for article in articles %}
				<div class="col-3">
					<div class="row height">
						<div class="col-sm margin-left card">
							<div class="width-img bg-dark">
								<img src="{{ article.photo1 }}" class="card-img-top" alt="...">
							</div>
							<div class="card-body">
								<h5 class="card-title">Article</h5>
								<p class="card-text">existe en plusieurs coloris</p>
								<div class="d-flex justify-content-center">
									<a href="#" class="btn btn-primary">Ajouter au panier</a>
								</div>
							</div>
						</div>
					</div>
				</div>

			{% endfor %}

			{# Boutons Précédent et suivant #}
			<div class="col-12">
				{% if previous >= 0 %}
					<a href="{{ path('homepage', { offset: previous }) }}" class="btn btn-sm btn-primary"></a>
				{% endif %}

				Il y a
				{{ articles|length~' article'~( articles|length > 1 ? 's' : '') }}

				{% if next < articles|length %}
					<a href="{{ path('homepage', { offset: next }) }}" class="btn btn-sm btn-primary"></a>
				{% endif %}
			</div>
		</div>
	</div>


{% endblock %}
